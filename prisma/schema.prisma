// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model task {
  id     Int @id @default(autoincrement())
  title   String
  done    Boolean
  userId  Int?
  person person[]
}

model person {
  id Int @id @default(autoincrement())
  name String
  tasks task[]
}